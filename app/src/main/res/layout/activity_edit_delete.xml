<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditDelete">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelStore"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Store:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/store"
                android:layout_width="200dp"
                android:layout_height="45dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelCategory"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Category:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/category"
                android:layout_width="200dp"
                android:layout_height="45dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelType"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Type:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/type"
                android:layout_width="200dp"
                android:layout_height="45dp" />

        </TableRow>

        <TableRow
            android:id="@+id/speciesRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/labelSpecies"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Species:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/species"
                android:layout_width="200dp"
                android:layout_height="45dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelProductName"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pName"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelColor"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Color:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/color"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelWide"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Wide(inch):"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/wide"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelLong"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="long(inch):"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/longUnit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelThickness"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Thickness(mm):"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/thickness"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelBrand"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Brand:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/brand"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelPrice"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Price/sqft:"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/price"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelStock"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="Stock(sqft):"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stock"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#FF5722"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>